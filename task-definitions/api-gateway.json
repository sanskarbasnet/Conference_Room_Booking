{
  "family": "conference-gateway-v2",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::997167341062:role/LabRole",
  "taskRoleArn": "arn:aws:iam::997167341062:role/LabRole",
  "containerDefinitions": [
    {
      "name": "api-gateway",
      "image": "997167341062.dkr.ecr.us-east-1.amazonaws.com/conference-v2/api-gateway:latest",
      "portMappings": [{"containerPort": 8000, "protocol": "tcp"}],
      "environment": [
        {"name": "PORT", "value": "8000"},
        {"name": "AUTH_SERVICE_URL", "value": "http://conference-alb-v2-649441908.us-east-1.elb.amazonaws.com/auth"},
        {"name": "ROOM_SERVICE_URL", "value": "http://conference-alb-v2-649441908.us-east-1.elb.amazonaws.com/rooms"},
        {"name": "BOOKING_SERVICE_URL", "value": "http://conference-alb-v2-649441908.us-east-1.elb.amazonaws.com/bookings"},
        {"name": "WEATHER_SERVICE_URL", "value": "http://conference-alb-v2-649441908.us-east-1.elb.amazonaws.com/weather"},
        {"name": "NOTIFICATION_SERVICE_URL", "value": "http://conference-alb-v2-649441908.us-east-1.elb.amazonaws.com/notification"},
        {"name": "JWT_SECRET", "value": "my-super-secret-jwt-key-change-in-production-12345"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/conference-gateway-v2",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}